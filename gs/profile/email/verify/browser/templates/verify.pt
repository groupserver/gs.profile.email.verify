<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/userInfo/name}: ${view/siteInfo/get_name}"/>
    </title>
  </head>
  <body>
    <tal:block metal:fill-slot="utilitylinks">
      <div id="utilitylinks">&#160;</div>
    </tal:block>
    <tal:block metal:fill-slot="body"
               define="email view/email">
      <h1>Verify Email Address</h1>
      <span id="gs-profile-email-verify-status">
        Verifying the email address.
      </span>
    </tal:block>
    <script metal:fill-slot="javascript"
            id="gs-profile-email-verify-js" type="text/javascript"
            src="/++resource++gs-profile-email-verify-20130515.js"
            tal:attributes="data-email view/email; 
                            data-verificationId view/verificationId;
                            data-siteName view/siteInfo/name;"
            data-statusId="#gs-profile-email-verify-status"
            defer="true">&#160;</script>
  </body>
</html>

