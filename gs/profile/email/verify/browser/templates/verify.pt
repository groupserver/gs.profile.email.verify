<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_site_home_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/userInfo/name}: ${view/siteInfo/get_name}"/>
    </title>
  </head>
  <body>
    <tal:block metal:fill-slot="body"
      define="email view/email">
      <h1>Verify Email Address</h1>
      <span id="verifying">
        Foo.
      </span>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script type="text/javascript"
        src="/++resource++verify_address.js">&#160;</script>
      <!-- script type="text/javascript" 
        tal:define="email view/email;
          verificationId view/verificationId;
          siteName view/siteInfo/get_name"
        tal:content="provider:groupserver.VerifyEmailJavaScript">
        alert("I have not been replaced either.");
      </script-->
      <script type="text/javascript">
        jQuery.noConflict()
        jQuery(document).ready( function () {
            GSVerifyEmailAddress.init('admin-foo@groupsense.net', 'foo',  
              '#verifying', 'Example Site');
        });
      </script>
    </tal:block>
  </body>
</html>

