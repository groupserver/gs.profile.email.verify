<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/userInfo/name}: ${view/siteInfo/get_name}"/>
    </title>
  </head>
  <body>
    <tal:block metal:fill-slot="contextnavigation">
      <div id="contextnavigation">&#160;</div>
    </tal:block>
    <tal:block metal:fill-slot="sitenavigation">
      <div id="sitenavigation">&#160;</div>
    </tal:block>
    <tal:block metal:fill-slot="search">
      <div id="searcharea">&#160;</div>
    </tal:block>
    <tal:block metal:fill-slot="utilitylinks">
      <div id="utilitylinks">&#160;</div>
    </tal:block>
    <tal:block metal:fill-slot="body"
      define="email view/email">
      <h1>Verify Email Address</h1>
      <span id="verifying">
        Verifying the email address.
      </span>
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script type="text/javascript"
        src="/++resource++verify_address-20110616.js">&#160;</script>
      <script type="text/javascript" 
        tal:define="email view/email;
          quotedEmail view/quotedEmail;
          verificationId view/verificationId;
          siteName view/siteInfo/get_name"
        tal:content="provider:groupserver.VerifyEmailJavaScript">
        alert("I have not been replaced.");
      </script>
    </tal:block>
  </body>
</html>

